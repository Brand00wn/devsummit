<body>
    <!--[if lt IE 7]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
      <![endif]-->

      <!-- Add your site or application content here -->

      <div class="main">
        <header class="main-header">
          <article class="row">
            <img src="images/logo.svg" alt="Agile Vale 2014" class="logo">

            <h1 class="main-title"><%= name %></h1>

            <a href="<%=eventick%>" class="register-btn">Inscreva-se</a>
          </article>

          <address class="address">
            <time><%=date%>, <%=place.name%> - <%=place.city%></time>
          </address>
        </header>

        <section class="photos"></section>

        <section class="speakers">
          <article class="row">
            <h1 class="title">PALESTRANTES</h1>		
			
			<%for(var i = 0; i < speakers.length; i++) {
				var speaker = speakers[i];%>
				<div class="col-md-4 flip-container">
				  <div class="flipper">
					<div class="front">
					  <img src="images/<%=speaker.photo%>" alt="Palestrante">
					</div>
					<div class="back">
					  <h1 class="speaker-name"><%=speaker.name%></h1>
					  <span class="speaker-role"><%=speaker.title%></span>
					  <p class="speaker-description"><%=speaker.bio%></p>
					</div>
				  </div>
				</div>
			<%}%>	
			
          </article>
        </section>
		
		<% if (released) {%>

        <section class="programming">
		
          <h1>PROGRAMAÇÃO</h1>

		<%for(var i1 = 0; i1 < schedules.length; i1++) {
			var days = schedules[i1];%>
		  
          <article class="row">
		  
		  
			<%for(var day in days) {
			var scheds = days[day];%>
		  
            <table class="events-table" cellpadding="0" cellspacing="0">
			
				<%for(var i2 = 0; i2 < scheds.length; i2++) {
				var schedule = scheds[i2];%>
				
				  <tr class="feature">
					<td class="time">
					  <time><%=schedule.time%></time>
					</td>
					
					
					
					<%for(var i3 = 0; i3 < schedule.talks.length; i3++) {
						var talk = schedule.talks[i3];%>
					
						<td class="event">
							<ul class="schedule-list">
								<li>
								  <h2 class="header">
									<span class="talk-title"><%=talk.title%></span>
									<% if( talk.room ) { %><span class="room"> <%=talk.room%> </span> <%}%> 
									
									<%for(var i5 = 0; i5 < talk.speakers.length; i5++) {
										var speaker = talk.speakers[i5];%>
										<span class="speaker"><%=speaker.name %><% if( speaker.title ) { %>, <%=speaker.title%><%}%></span>
									<%}%>
								  </h2>
								  <span class="description"><%=talk.description%></span>
								</li>
						  </ul>
						</td>
					<%}%>
				  </tr>
				<%}%>
            </table>

			<%}%>
		  </article>
		<%}%>

        </section>

        <%}%>
		
		<section class="local">
          <div class="bg-image"></div>

          <article class="row">
            <img src="images/foto-hotel.jpg" alt="Faro Hotel" class="faro-hotel">

            <address class="event-address">
              <p>O evento vai ser realizado no <span><%=place.name %> em <%=place.city %> </span></p>
            </address>

            <a href="<%=place.map%>" class="more-info">Mapa</a>
          </article>
        </section>

        <section class="sponsors">
          <article class="row">
            <h1>PATROCINADORES</h1>
			
			<%for(var i1 = 0; i1 < sponsorships.length; i1++) {
				var sponsorship = sponsorships[i1];%>
				<div>
					<% if (sponsorship.sponsors) { %>
						<div class="col-md-4">
							<h2 class="title support-title"><%=sponsorship.name%></h2>
							<%for(var i2 = 0; i2 < sponsorship.sponsors.length; i2++) {
								var sponsor = sponsorship.sponsors[i2];%>
								<div class="sponsor">
									<a href="<%=sponsor.website%>" target="_blannk"><img src="images/<%=sponsor.logo%>" alt="<%=sponsor.name%>" class="sponsor-logo"></a>
								</div>
							<%}%>
						</div>
					<%}%>
				</div>
			<%}%>

          </article>
        </section>

        <footer class="main-footer">
          <p class="copyright">© Copyright <%=new Date().getFullYear()%> - todos os direitos reservados</p>
        </footer>
      </div>

